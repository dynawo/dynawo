+  ${sundials_SOURCE_DIR}/include/sunlinsol/sunlinsol_nicslu.h
+  )
+
+# Add source directory to include directories
+INCLUDE_DIRECTORIES(.)
+
+# Define C preprocessor flag -DBUILD_SUNDIALS_LIBRARY
