+    F2C_IDA_linsol = NULL;
+    F2C_IDA_linsol = SUNLinSol_NICSLU(F2C_IDA_vec, F2C_IDA_matrix);
+    if (F2C_IDA_linsol == NULL) *ier = -1;
+    break;
+  case FCMIX_KINSOL:
