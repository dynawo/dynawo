+int SUNLinSolFree_NICSLU(SUNLinearSolver S)
+{
+  /* return with success if already freed */
+  if (S == NULL)
+    return(SUNLS_SUCCESS);
+  
+  if (S->content) {
+    if (SOLVE(S))
+      NicsLU_Destroy(SOLVE(S));
+    free(S->content);
+    S->content = NULL;
+  }
+  /* delete generic structures */
+  if (S->ops) {
+    free(S->ops);  
+    S->ops = NULL;
+  }
+  free(S); S = NULL;
+  return(SUNLS_SUCCESS);
+}
