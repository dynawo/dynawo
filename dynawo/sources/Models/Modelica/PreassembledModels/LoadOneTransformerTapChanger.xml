<dyn:dynamicModelsArchitecture xmlns:dyn="http://www.rte-france.com/dynawo">
  <!-- LoadAlphaBeta plus transformer and associated tap changer -->
  <dyn:modelicaModel id="LoadOneTransformerTapChanger">
    <dyn:unitDynamicModel id="load" name="Dynawo.Electrical.Loads.LoadAlphaBeta" initName="Dynawo.Electrical.Loads.LoadConnect_INIT"/>
    <dyn:unitDynamicModel id="transformer" name="Dynawo.Electrical.Transformers.TransformersVariableTapControlled.TransformerVariableTapControlled" initName="Dynawo.Electrical.Transformers.TransformersVariableTapControlled.TransformerVariableTapPQControlled_INIT"/>
    <dyn:initConnect id1="load" var1="terminal0" id2="transformer" var2="terminal20"/>
    <dyn:connect id1="load" var1="terminal" id2="transformer" var2="terminal2"/>
    <dyn:connect id1="load" var1="switchOffSignal1" id2="transformer" var2="switchOffSignal1"/>
    <dyn:connect id1="load" var1="switchOffSignal2" id2="transformer" var2="switchOffSignal2"/>
  </dyn:modelicaModel>
</dyn:dynamicModelsArchitecture>
